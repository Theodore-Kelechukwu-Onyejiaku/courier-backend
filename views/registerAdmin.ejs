<!doctype html>
<html lang="en">
  <head>
  	<title>Admin Dashboard
    </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
		
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
		<link rel="stylesheet" href="/css/style2.css">
  </head>
  <body>
		
		<div class="wrapper d-flex align-items-stretch ">
			<nav id="sidebar">
				<div class="p-4 pt-5">
		  		<a href="#" class="img logo rounded-circle mb-5" style="background-image: url(/img/logo.jpg);"></a>
	        <ul class="list-unstyled components mb-5">
	          <li>
	              <a href="/api/admin/registerAdmin">Register Admins</a>
	          </li>
            <li>
	              <a href="/api/admin/viewAdmin">View Admin</a>
	          </li>
	        <div class="footer">
	        </div>
	      </div>
    	</nav>

        <!-- Page Content  -->
      <div id="content" class="p-0 p-md-0">

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">

            <button type="button" id="sidebarCollapse" class="btn btn-primary">
                <i class="fa fa-bars"></i>
            </button>
            <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa fa-bars"></i>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="nav navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/api/admin/viewAdmin">Home</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/api/admin/registerAdmin">Register Admin</a>
                </li>
              </ul>
            </div>
          </div>
        </nav>
        <div class="container">
          <h1 class="text-success text-center">Register Admins</h1>
          <% var error; %>
          <h3 class="text-danger text-center"><%= error %></h3>
          <div class="row">
            <div class="col-sm-1 col-md-3 col-lg-3 col-xl-3"></div>
            <div class="col-sm-10 col-md-6 col-lg-6 col-xl-6">
              <form action="/api/admin/registerAdmin" method="POST">
                <div class="form-group d-flex">
                  <i class="text-danger fa fa-user fa-3x"></i>
                  <input type="text" name="name" class="form-control" placeholder="admin name">
                </div> 
                <div class="form-group d-flex">
                  <i class="text-warning fa fa-envelope fa-3x"></i><span> </span>
                  <input type="email" name="email" class="form-control" placeholder="email">
                </div> 
                <div class="form-group d-flex">
                  <i class="text-info fa fa-key fa-3x"></i><span> </span>
                  <input id="password" type="password" name="password" class="form-control" placeholder="password">
                </div> 
                <input type="hidden" name="realPassword" id="realPassword">
                <input type="submit" class="btn btn-success">
              </form>
            </div>
            <div class="col-sm-1 col-md-3 col-lg-3 col-xl-3"></div>
          </div>
          
        </div>
      </div>
        </div>
        
    </div>
    </div>
    
    <script>
      document.getElementById("password").addEventListener("input", (e)=>{
        document.getElementById("realPassword").value = e.target.value;
      })
    </script>
        
        
    
        
